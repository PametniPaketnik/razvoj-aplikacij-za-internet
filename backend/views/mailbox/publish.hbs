<div class="container my-5">
    <div class="row">
        <div class="col-12 mb-3">
            <h1 class="text-center">Mailbox</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6">
            <h2>Add new mailbox</h2>
            <form action="/mailboxes" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" id="name" name="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="street" class="form-label">Street:</label>
                    <input type="text" id="street" name="street" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="postcode" class="form-label">Postcode:</label>
                    <input type="text" id="postcode" name="postcode" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="post" class="form-label">Post office:</label>
                    <input type="text" id="post" name="post" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="open" class="form-label">Open:</label>
                    <input type="text" id="open" name="open" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>